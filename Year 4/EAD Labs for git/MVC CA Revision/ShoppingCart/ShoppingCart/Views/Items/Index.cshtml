@model IEnumerable<ShoppingCart.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <button type="button" class="btn blue" onclick="location.href='@Url.Action("Add", "Items", new { code = item.Code })'"> Add to Cart</button>
        </td>
    </tr>
}

</table>

Total Price of Items in Cart: €@ViewBag.TotalPrice
